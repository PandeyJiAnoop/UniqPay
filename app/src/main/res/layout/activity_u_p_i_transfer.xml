<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/back_three"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        app:cardElevation="20dp"
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/purple_500"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/back_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:tint="@color/a_white"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back" />
            <TextView
                android:id="@+id/header_title"
                android:text="UPI Transfer"
                android:layout_centerInParent="true"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_below="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/upi_id_cv"
                android:visibility="gone"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:id="@+id/rlone"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tag_tv"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="A"
                        android:maxLength="1"
                        android:gravity="center"
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        android:background="@drawable/bg_offer_home"
                        ></TextView>
                    <LinearLayout
                        android:layout_marginLeft="50dp"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/title_name_tv"
                            android:layout_width="wrap_content"
                            android:text=""
                            android:gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_height="match_parent">

                        </TextView>
                        <TextView
                            android:maxLength="31"
                            android:id="@+id/upiname_tv"
                            android:layout_width="wrap_content"
                            android:text="A.K. Pandey"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_height="match_parent">

                        </TextView>
                    </LinearLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <EditText
                android:visibility="gone"
                android:id="@+id/upi_et"
                android:background="@drawable/rounded_edittext"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:hint="Enter UPI Id"
                android:inputType="text"
                />

            <LinearLayout
                android:layout_margin="5dp"
                android:background="@drawable/gradient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                    <RelativeLayout                     android:background="@drawable/rounded_edittext"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="50dp"
                            android:padding="10dp"
                            android:id="@+id/rupeesymbol"
                            android:src="@drawable/rupee"
                            android:layout_height="50dp">
                        </ImageView>
                        <View
                            android:layout_width="0.1dp"
                            android:id="@+id/view"
                            android:layout_toRightOf="@id/rupeesymbol"
                            android:background="@color/grey"
                            android:layout_height="50dp">

                        </View>
                        <EditText
                            android:layout_width="match_parent"
                            android:hint="500"
                            android:inputType="number"
                            android:maxLength="4"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:textColorHint="#AEACAC"
                            android:id="@+id/rupee_et"
                            android:textColor="@color/black"
                            android:layout_toRightOf="@+id/view"
                            android:layout_height="50dp">
                        </EditText>
                    </RelativeLayout>
                    <EditText
                        android:id="@+id/edt_msg"
                        android:background="@drawable/rounded_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingLeft="10dp"
                        android:hint="Add a message(Optional)"
                        android:inputType="text"
                        />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="10sp"
                    android:id="@+id/tv"
                    android:textColor="@color/red"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:text="If any amount deduct or any types of error please contact with admin"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <androidx.appcompat.widget.AppCompatButton
                    android:background="@drawable/info_back"
                    android:id="@+id/buttonOk"
                    android:text="Submit"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                </androidx.appcompat.widget.AppCompatButton>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
