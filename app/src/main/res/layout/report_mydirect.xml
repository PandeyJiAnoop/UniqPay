<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="3dp"
    app:cardElevation="10dp"
    android:layout_margin="0.5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:id="@+id/live_ll"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="2dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="80dp"
                        android:text="S.No."
                        android:gravity="center_vertical"

                        android:textColor="@color/black"

                        android:layout_height="match_parent">
                    </TextView>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="Service Name"
                        android:gravity="center_vertical"

                        android:textStyle="bold"


                        android:textColor="@color/black"

                        android:layout_height="match_parent">
                    </TextView>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="Tran.Status"
                        android:gravity="center_vertical"
                        android:textStyle="bold"



                        android:textColor="@color/black"

                        android:layout_height="match_parent">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:padding="2dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="80dp"

                        android:text="1."
                        android:gravity="center_vertical"

                        android:layout_height="match_parent">
                    </TextView>
                    <TextView
                        android:id="@+id/tv1"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="Mobile Recharge"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">
                    </TextView>
                    <TextView
                        android:id="@+id/tv2"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="EP00239"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">
                    </TextView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="2dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="80dp"
                        android:text="Amount"
                        android:gravity="center_vertical"
                        android:textStyle="bold"



                        android:textColor="@color/black"

                        android:layout_height="match_parent">
                    </TextView>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="Date"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_height="match_parent">
                    </TextView>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="Customer No."
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_height="match_parent">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:padding="2dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="80dp"

                        android:text="500.00"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">
                    </TextView>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="25-04-2023"
                        android:gravity="center_vertical"
                        android:id="@+id/tv4"

                        android:layout_height="match_parent">
                    </TextView>
                    <TextView
                        android:id="@+id/tv5"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="Success"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="2dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Order Id"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_height="match_parent">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:padding="2dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv6"
                        android:layout_width="match_parent"
                        android:text="Success"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">
                    </TextView>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/red"
            android:layout_height="4dp">
        </View>
    </LinearLayout>
</androidx.cardview.widget.CardView>
