<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:orientation="vertical"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    android:elevation="10dp"
    app:cardBackgroundColor="#eee"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="2dp"
                android:layout_alignParentRight="true"
                android:layout_width="70dp"
                android:textSize="12dp"
                android:gravity="center_vertical"
                android:textAlignment="center" android:layout_centerVertical="true"
                android:text="Select" android:textColor="@color/buttoncolor"
                android:background="@drawable/button"
                android:layout_height="30dp">
            </TextView>

            <TextView android:id="@+id/head_rb"
                android:textStyle="bold"
                android:padding="5dp"              android:textColor="@color/purple_200"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:text="AIRTEL 4GB +280 SMS "
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/des_tv"
            android:padding="5dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
</androidx.cardview.widget.CardView>